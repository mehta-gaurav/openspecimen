<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class name="com.krishagni.catissueplus.core.dashboard.domain.DashletConfig" table="OS_DASHLET_CONFIG">
    <id name="id" column="IDENTIFIER">
      <generator class="native">
        <param name="sequence">OS_DASHLET_CFG_SEQ</param>
      </generator>
    </id>

    <property name="name" column="NAME"/>

    <property name="title" column="TITLE"/>

    <property name="dataSource" column="DATA_SOURCE"/>

    <property name="chartOpts" column="CHART_OPTS"/>

    <property name="activityStatus" column="ACTIVITY_STATUS"/>

    <filter name="activeEntity"/>

    <query name="getDashletCfgByName">
      from
        com.krishagni.catissueplus.core.dashboard.domain.DashletConfig
      where
        name = :name
    </query>
  </class>
</hibernate-mapping>