<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet author="vpawar" id="Index on container site" dbms="oracle">
    <createIndex tableName="OS_STORAGE_CONTAINERS" indexName="OS_ST_CONT_SITE_IDX">
      <column name="SITE_ID"/>
    </createIndex>
  </changeSet>

  <changeSet author="vpawar" id="Index on container parent" dbms="oracle">
    <createIndex tableName="OS_STORAGE_CONTAINERS" indexName="OS_ST_CONT_PARENT_IDX">
      <column name="PARENT_CONTAINER_ID"/>
    </createIndex>
  </changeSet>

  <changeSet author="vpawar" id="Index on container to which position belongs" dbms="oracle">
    <createIndex tableName="OS_CONTAINER_POSITIONS" indexName="OS_POS_CONT_IDX">
      <column name="STORAGE_CONTAINER_ID"/>
    </createIndex>
  </changeSet>

  <changeSet author="vpawar" id="Index on container allowed protocols" dbms="oracle">
    <createIndex tableName="OS_STOR_CONTAINER_COMP_CPS" indexName="OS_ST_CONT_CP_IDX">
      <column name="STORAGE_CONTAINER_ID"/>
      <column name="CP_ID"/>
    </createIndex>
  </changeSet>

  <changeSet author="vpawar" id="Index on container allowed specimen classes" dbms="oracle">
    <createIndex tableName="OS_STOR_CONT_COMP_SPEC_CLASSES" indexName="OS_ST_CONT_SPMN_CLASS_IDX">
      <column name="STORAGE_CONTAINER_ID"/>
      <column name="SPECIMEN_CLASS"/>
    </createIndex>
  </changeSet>

  <changeSet author="vpawar" id="Index on container allowed specimen types" dbms="oracle">
    <createIndex tableName="OS_STOR_CONT_COMP_SPEC_TYPES" indexName="OS_ST_CONT_SPMN_TYPE_IDX">
      <column name="STORAGE_CONTAINER_ID"/>
      <column name="SPECIMEN_TYPE"/>
    </createIndex>
  </changeSet>

  <changeSet author="vpawar" id="Track when specimen list was created">
    <addColumn tableName="CATISSUE_SPECIMENLIST_TAGS">
      <column name="CREATED_ON" type="${timestamp.type}" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </addColumn>
  </changeSet>

  <changeSet author="vlonushte" id="Dashlet config table">
    <createTable tableName="OS_DASHLET_CONFIG">
      <column name="IDENTIFIER" type="${int.type}" autoIncrement="${autoIncrement}">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="NAME" type="${text.type}(64)">
        <constraints nullable="false"/>
      </column>

      <column name="TITLE" type="${text.type}(255)">
        <constraints nullable="false"/>
      </column>

      <column name="DATA_SOURCE" type="${clob.type}">
        <constraints nullable="false"/>
      </column>

      <column name="CHART_OPTS" type="${clob.type}">
        <constraints nullable="false"/>
      </column>

      <column name="ACTIVITY_STATUS" type="${text.type}(16)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet author="vlonushte" id="Dashlet config sequence" dbms="oracle">
    <createSequence
      sequenceName="OS_DASHLET_CFG_SEQ"
      startValue="1"
      incrementBy="1"
      ordered="true"/>
  </changeSet>

  <changeSet author="vlonushte" id="Dashboard table">
    <createTable tableName="OS_DASHBOARDS">
      <column name="IDENTIFIER" type="${int.type}" autoIncrement="${autoIncrement}">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="USER_ID" type="${int.type}">
        <constraints nullable="false"/>
      </column>

      <column name="ACTIVITY_STATUS" type="${text.type}(16)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet author="vlonushte" id="Dashboard sequence" dbms="oracle">
    <createSequence
      sequenceName="OS_DASHBOARDS_SEQ"
      startValue="1"
      incrementBy="1"
      ordered="true"/>
  </changeSet>

  <changeSet author="vlonushte" id="FK on dashboard user id">
    <addForeignKeyConstraint
      constraintName="FK_OS_DASHBOARD_USER_ID"
      baseTableName="OS_DASHBOARDS"
      baseColumnNames="USER_ID"
      referencedTableName="CATISSUE_USER"
      referencedColumnNames="IDENTIFIER"/>
  </changeSet>

  <changeSet author="vlonushte" id="Dashlet table">
    <createTable tableName="OS_DASHLETS">
      <column name="IDENTIFIER" type="${int.type}" autoIncrement="${autoIncrement}">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="DASHBOARD_ID" type="${int.type}">
        <constraints nullable="false"/>
      </column>

      <column name="DASHLET_CFG_ID" type="${int.type}">
        <constraints nullable="false"/>
      </column>

      <column name="HEIGHT" type="${smallint.type}">
      </column>

      <column name="WIDTH" type="${smallint.type}">
      </column>

      <column name="ROWN" type="${smallint.type}">
      </column>

      <column name="COLN" type="${smallint.type}">
      </column>
    </createTable>
  </changeSet>

  <changeSet author="vlonushte" id="Dashlet sequence" dbms="oracle">
    <createSequence
      sequenceName="OS_DASHLETS_SEQ"
      startValue="1"
      incrementBy="1"
      ordered="true"/>
  </changeSet>

  <changeSet author="vlonushte" id="FK on dashboard id">
    <addForeignKeyConstraint
      constraintName="FK_OS_DASHLET_DB_ID"
      baseTableName="OS_DASHLETS"
      baseColumnNames="DASHBOARD_ID"
      referencedTableName="OS_DASHBOARDS"
      referencedColumnNames="IDENTIFIER"/>
  </changeSet>

  <changeSet author="vlonushte" id="FK on dashlet config id">
    <addForeignKeyConstraint
      constraintName="FK_OS_DASHLET_CFG_ID"
      baseTableName="OS_DASHLETS"
      baseColumnNames="DASHLET_CFG_ID"
      referencedTableName="OS_DASHLET_CONFIG"
      referencedColumnNames="IDENTIFIER"/>
  </changeSet>
</databaseChangeLog>
