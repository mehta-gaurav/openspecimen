<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet author="vpawar" id="Index on container site" dbms="oracle">
    <createIndex tableName="OS_STORAGE_CONTAINERS" indexName="OS_ST_CONT_SITE_IDX">
      <column name="SITE_ID"/>
    </createIndex>
  </changeSet>

  <changeSet author="vpawar" id="Index on container parent" dbms="oracle">
    <createIndex tableName="OS_STORAGE_CONTAINERS" indexName="OS_ST_CONT_PARENT_IDX">
      <column name="PARENT_CONTAINER_ID"/>
    </createIndex>
  </changeSet>

  <changeSet author="vpawar" id="Index on container to which position belongs" dbms="oracle">
    <createIndex tableName="OS_CONTAINER_POSITIONS" indexName="OS_POS_CONT_IDX">
      <column name="STORAGE_CONTAINER_ID"/>
    </createIndex>
  </changeSet>

  <changeSet author="vpawar" id="Index on container allowed protocols" dbms="oracle">
    <createIndex tableName="OS_STOR_CONTAINER_COMP_CPS" indexName="OS_ST_CONT_CP_IDX">
      <column name="STORAGE_CONTAINER_ID"/>
      <column name="CP_ID"/>
    </createIndex>
  </changeSet>

  <changeSet author="vpawar" id="Index on container allowed specimen classes" dbms="oracle">
    <createIndex tableName="OS_STOR_CONT_COMP_SPEC_CLASSES" indexName="OS_ST_CONT_SPMN_CLASS_IDX">
      <column name="STORAGE_CONTAINER_ID"/>
      <column name="SPECIMEN_CLASS"/>
    </createIndex>
  </changeSet>

  <changeSet author="vpawar" id="Index on container allowed specimen types" dbms="oracle">
    <createIndex tableName="OS_STOR_CONT_COMP_SPEC_TYPES" indexName="OS_ST_CONT_SPMN_TYPE_IDX">
      <column name="STORAGE_CONTAINER_ID"/>
      <column name="SPECIMEN_TYPE"/>
    </createIndex>
  </changeSet>

  <changeSet author="vlonushte" id="Dashlet config table">
    <createTable tableName="OS_DASHLET_CONFIG">
      <column name="IDENTIFIER" type="${int.type}" autoIncrement="${autoIncrement}">
        <constraints primaryKey="true" nullable="false"/>
      </column>
  
      <column name="NAME" type="${text.type}(255)">
        <constraints nullable="false"/>
      </column>

      <column name="CAPTION" type="${text.type}(255)">
        <constraints nullable="false"/>
      </column>

      <column name="DATA_SOURCE_TYPE" type="${text.type}(16)">
        <constraints nullable="false"/>
      </column>

      <column name="CHART_TYPE" type="${text.type}(16)">
        <constraints nullable="false"/>
      </column>

      <column name="ACTIVITY_STATUS" type="${text.type}(16)">
      </column>
    </createTable>
  </changeSet>

  <changeSet author="vlonushte" id="Dashlet data-source options table">
    <createTable tableName="OS_DASHLET_CFG_DS_OPTS">
      <column name="DASHLET_CFG_ID" type="${int.type}">
        <constraints nullable="false"/>
      </column>

      <column name="NAME" type="${text.type}(32)">
        <constraints nullable="false"/>
      </column>

      <column name="VALUE" type="${text.type}(512)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet author="vlonushte" id="Dashlet chart options table">
    <createTable tableName="OS_DASHLET_CFG_CHART_OPTS">
      <column name="DASHLET_CFG_ID" type="${int.type}">
        <constraints nullable="false"/>
      </column>

      <column name="NAME" type="${text.type}(32)">
        <constraints nullable="false"/>
      </column>

      <column name="VALUE" type="${text.type}(512)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet author="vlonushte" id="Dashlet config sequence" dbms="oracle">
    <createSequence
      sequenceName="OS_DASHLET_CFG_SEQ"
      startValue="1"
      incrementBy="1"
      ordered="true"/>
  </changeSet>

  <changeSet author="vlonushte" id="View Dashlets table">
    <createTable tableName="OS_VIEW_DASHLETS">
      <column name="IDENTIFIER" type="${int.type}" autoIncrement="${autoIncrement}">
        <constraints primaryKey="true" nullable="false"/>
      </column>
 
      <column name="NAME" type="${text.type}(255)">
        <constraints nullable="false"/>
      </column>

      <column name="viewName" type="${text.type}(16)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet author="vlonushte" id="View Dashlets sequence" dbms="oracle">
    <createSequence
      sequenceName="OS_VIEW_DASHLETS_SEQ"
      startValue="1"
      incrementBy="1"
      ordered="true"/>
  </changeSet>

  <changeSet author="vlonushte" id="Maintaining dashlet and view dashlets relationship">
    <createTable tableName="OS_DASHLET_VIEW_DASHLETS">
      <column name="DASHLET_CFG_ID" type="${int.type}">
        <constraints nullable="false"/>
      </column>

      <column name="VIEW_DASHLETS_ID" type="${int.type}">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
 
  <changeSet author="vlonushte" id="FK on dashlet config id">
    <addForeignKeyConstraint
      constraintName="FK_OS_DASHLET_CFG_ID"
      baseTableName="OS_DASHLET_VIEW_DASHLETS"
      baseColumnNames="DASHLET_CFG_ID"
      referencedTableName="OS_DASHLET_CONFIG"
      referencedColumnNames="IDENTIFIER"/>
  </changeSet>

  <changeSet author="vlonushte" id="FK on view dashelts id">
    <addForeignKeyConstraint
      constraintName="FK_OS_VIEW_DASHLETS__ID"
      baseTableName="OS_DASHLET_VIEW_DASHLETS"
      baseColumnNames="VIEW_DASHLETS_ID"
      referencedTableName="OS_VIEW_DASHLETS"
      referencedColumnNames="IDENTIFIER"/>
  </changeSet>
</databaseChangeLog>
